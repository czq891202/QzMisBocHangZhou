
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>档案追溯列表</title>
    <meta http-equiv="X-UA-Compatible" content="text/html" charset="utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0,user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="renderer" content="webkit">

    <script type="text/javascript" src="~/Scripts/layuiadmin/layui/layui.js"></script>
    <link rel="stylesheet" media="all" href="~/Scripts/layuiadmin/layui/css/layui.css" />
    <link rel="stylesheet" media="all" href="~/Scripts/layuiadmin/style/admin.css" />
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-card">
            <div class="layui-card-body" style="padding: 15px;">
                <form class="layui-form" lay-filter="component-form-group" action="">
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <div class="layui-input-inline">
                                <select name="OrgId" id="OrgId" lay-filter="UserOrgFilter" lay-search=""></select>
                            </div>
                            <div class="layui-input-inline">
                                <select name="GuaranteeType" id="GuaranteeType" lay-filter="GuaranteeType" lay-verify="required">
                                    <option value="">--押品登记类型--</option>
                                    <option value="已办妥正式抵押登记(他项权证)">已办妥正式抵押登记(他项权证)</option>
                                    <option value="已办妥预抵押登记">已办妥预抵押登记</option>
                                    <option value="车辆登记证">车辆登记证</option>
                                    <option value="保单">保单</option>
                                    <option value="存单">存单</option>
                                    <option value="公积金组合">公积金组合</option>
                                </select>
                            </div>
                            <div class="layui-input-inline">
                                <select name="Status" id="Status" lay-filter="StatusFilter" lay-search="">
                                    <option value="">全部</option>
                                    <option value="0">未移交</option>
                                    <option value="1">在库</option>
                                    <option value="5">借阅</option>
                                    <option value="11">结清</option>
                                </select>
                            </div>
                            <div class="layui-input-inline">
                                <input type="text" name="KeyWords" id="KeyWords" autocomplete="off" placeholder="产品大类码" class="layui-input">
                            </div>
                            <div class="layui-input-inline">
                                <button class="layui-btn" id="btn-Search"><i class="layui-icon layui-icon-search"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="layui-form-item">
                    <table class="layui-table layui-form" id="ArchiveInfo" lay-filter="ArchiveInfo" lay-size="sm"></table>
                </div>
            </div>
        </div>
    </div>
    @*档案状态*@
    <script type="text/html" id="table-statusTpl">        
        {{#  if(d.Status === 0){ }}
        <span>草稿-未移交</span> {{#  } }}
        {{#  if(d.Status === 1){ }}
        <span>已入库</span> {{#  } }}
        {{#  if(d.Status === 3){ }}
        <span>变更出库</span> {{#  } }}
        {{#  if(d.Status === 4){ }}
        <span>借阅审核中</span> {{#  } }}
        {{#  if(d.Status === 6){ }}
        <span>归还审核中</span> {{#  } }}
        {{#  if(d.Status === 10){ }}
        <span>结清审核中</span> {{#  } }}
        {{#  if(d.Status === 11){ }}
        <span>已结清</span> {{#  } }}
        {{#  if(d.Status === 19){ }}
        <span>处置出库</span> {{#  } }}
        {{#  if(d.Status === 21){ }}
        <span>变更结清出库</span> {{#  } }}
        {{#  if(d.Status === 22){ }}
        <span>移交驳回</span> {{#  } }}
        {{#  if(d.Status === 23){ }}
        <span>借阅驳回</span> {{#  } }}
        {{#  if(d.Status === 24){ }}
        <span>归还驳回</span> {{#  } }}
        {{#  if(d.Status === 25){ }}
        <span>结清驳回</span> {{#  } }}
    </script>
    <script>
        layui.config({
            base: '../../Scripts/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'table', 'form', 'laydate'], function () {
            var $ = layui.$
                , form = layui.form
                , layer = layui.layer
                , table = layui.table;

            form.render(null, 'component-form-group');


            //机构下拉框绑定
            var orgloadingIndex = layer.load(2);
            $.ajax({
                url: '/OrgInfo/GetOrgInfoListByUser',
                type: 'get',
                contentType: 'application/json',
                dataType: "json",
                success: function (result) {
                    //往下拉菜单里添加元素
                    //layer.alert(JSON.stringify(result));
                    $.each(result, function (index, item) {
                        $('#OrgId').append(new Option(item.Name, item.Id));
                    });
                    form.render('select');
                    form.val('component-form-group', { 'OrgId': '@Model.OrgId' });
                    layer.close(orgloadingIndex);
                },
                error: function (result) {
                    //console.log(result);
                    top.layer.msg('服务接口请求失败!', { time: 1000, shade: '0.3', shadeClose: false }, function () {
                        parent.layer.close(index);
                    });
                }
            });

            var tabIns = table.render({
                elem: '#ArchiveInfo'
                , url: '/Report/GetArchiveInfoTime'
                    , cellMinWidth: 80 //全局定义常规单元格的最小宽度
                    , title: '押品档案'
                , cols: [[
                    { type: 'numbers' }
                    , { field: 'OrgName', title: '机构名称' }
                    , { field: 'OrgCode', title: '机构代码', width: 100 }
                    , { field: 'QuotaNo', title: '额度号' }
                    , { field: 'LoanAccount', title: '贷款账号' }
                    , { field: 'GuaranteeType', title: '押品类型' }
                    , { field: 'LoanBorrower', title: '借款人' }
                    , { field: 'CustomerNo', title: '客户号' }
                    , { field: 'Handover', title: '移交人' }
                    , { field: 'Status', title: '档案状态', templet: '#table-statusTpl' }
                    , { field: 'Receiver', title: '接收人' }
                    , { field: 'TransferDateString', title: '移交日期' }
                    , { field: 'PreReturnDateString', title: '预归还时间' }
                    , { field: 'SettlePeople', title: '结清人' }
                    , { field: 'SettleDateString', title: '结清日期', width: 100 }
                    //, { field: 'SettleStatus', title: '结清状态' }
                    , { field: 'SettleUsedBy', title: '结清类型' }
                    , { field: 'BorrowPeople', title: '借阅人' }
                    , { field: 'BorrowDateString', title: '借阅时间' }
                    , { field: 'BorrowUsedBy', title: '借阅用途' }
                    //, { field: 'BorrowStatus', title: '借阅状态' }
                    , { field: 'PreReturnDateString', title: '归还时间' }
                ]]
                    , page: true
                    , limit: 15
                    , limits: [15, 30, 50, 100]
                    , method: 'post'
                    , even: true
                    , loading: true
                    , done: function (res) {
                        var that = this.elem.next();
                    }
                    , where: {
                        keywords: '',
                        orgId: '@Model.OrgId',
                    }
                });

            $('#btn-Search').click(function () {
                table.reload('ArchiveInfo', {
                    where: {
                        orgId: $('#OrgId').val(),
                        guaranteeType: $('#GuaranteeType').val(),
                        status: $('#Status').val(),
                        keyWords: $('#KeyWords').val()
                    }
                });
                return false;
            });
        });
    </script>
</body>
</html>
