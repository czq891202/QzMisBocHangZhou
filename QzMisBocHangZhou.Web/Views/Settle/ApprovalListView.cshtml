@model QzMisBocHangZhou.Model.UserInfo
@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>结清列表</title>
    <meta http-equiv="X-UA-Compatible" content="text/html" charset="utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0,user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="renderer" content="webkit">

    <script type="text/javascript" src="~/Scripts/layuiadmin/layui/layui.js"></script>
    <link rel="stylesheet" media="all" href="~/Scripts/layuiadmin/layui/css/layui.css" />
    <link rel="stylesheet" media="all" href="~/Scripts/layuiadmin/style/admin.css" />
</head>
<body>
    <div class="layui-tab">
        <ul class="layui-tab-title">
            <li class="layui-this">待审核清单</li>
            <li>待出库清单</li>
        </ul>
        <div class="layui-tab-content">
            <div class="layui-tab-item layui-show">
                <div class="layui-fluid">
                    <div class="layui-card">
                        <div class="layui-card-body" style="padding: 15px;">
                            <form class="layui-form" lay-filter="component-form-group" action="">
                                <div class="layui-form-item">
                                    <div class="layui-inline">
                                        <div class="layui-input-inline">
                                            <select name="OrgId" id="OrgId" lay-filter="UserOrgFilter" lay-search=""></select>
                                        </div>
                                        <div class="layui-input-inline">
                                            <input type="text" name="KeyWords" id="KeyWords" autocomplete="off" class="layui-input">
                                        </div>
                                        <div class="layui-input-inline">
                                            <button class="layui-btn" id="btn-Search"><i class="layui-icon layui-icon-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="layui-form-item">
                                <table class="layui-table layui-form" id="SettleList" lay-filter="SettleList" lay-size="sm"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="layui-tab-item">
                <div class="layui-tab-item layui-show">
                    <div class="layui-fluid">
                        <div class="layui-card">
                            <div class="layui-card-body" style="padding: 15px;">
                                <div class="layui-form-item">
                                    <table class="layui-table layui-form" id="PreOutList" lay-filter="PreOutList" lay-size="sm"></table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/html" id="table-statusTpl">
        {{#  if(d.ArcStatus === 1){ }}
        <span>在库</span> {{#  } }}

        {{#  if(d.ArcStatus === 5){ }}
        <span>借阅</span> {{#  } }}
    </script>


    <script type="text/html" id="optTpl">
        <a class="layui-btn layui-btn-xs" lay-event="submit">通过</a>
        <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="rollback">驳回</a>
    </script>

    <script type="text/html" id="optTpl2">
        <a class="layui-btn layui-btn-xs" lay-event="out">结清出库</a>
    </script>


    <script>
        layui.config({
            base: '../../Scripts/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'table', 'form', 'layer'], function () {
            var $ = layui.$
                , form = layui.form
                , layer = layui.layer
                , table = layui.table;

            form.render(null, 'component-form-group');

            //机构下拉框绑定
            var orgloadingIndex = layer.load(2);
            $.ajax({
                url: '/OrgInfo/GetOrgInfoListByUser',
                type: 'get',
                contentType: 'application/json',
                dataType: "json",
                success: function (result) {
                    //往下拉菜单里添加元素
                    //layer.alert(JSON.stringify(result));
                    $.each(result, function (index, item) {
                        $('#OrgId').append(new Option(item.Name, item.Id));
                    });
                    form.render('select');
                    form.val('component-form-group', { 'OrgId': '@Model.OrgId' });
                    layer.close(orgloadingIndex);
                },
                error: function (result) {
                    //console.log(result);
                    top.layer.msg('服务接口请求失败!', { time: 1000, shade: '0.3', shadeClose: false }, function () {
                        parent.layer.close(index);
                    });
                }
            });

            var tabIns = table.render({
                elem: '#SettleList'
                , url: '/Settle/GetPreReview'
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度
                , title: '押品档案'
                , cols: [[
                    { type: 'numbers' }
                    , { field: 'OrgName', title: '机构名称' }
                    , { field: 'OrgCode', title: '机构代码' }
                    , { field: 'QuotaNo', title: '额度号' }
                    , { field: 'LoanAccount', title: '贷款账号' }
                    , { field: 'LoanBorrower', title: '借款人' }
                    , { field: 'CustomerNo', title: '客户号' }
                    , { field: 'ArcStatus', title: '档案状态', templet: '#table-statusTpl' }
                    , { field: 'UsedBy', title: '结清类型' }
                    , { field: 'SettleDateString', title: '结清日期' }
                    , { title: '操作', toolbar: '#optTpl', width: 160 }
                ]]
                , page: true
                , limit: 15
                , limits: [15, 30, 50, 100]
                , method: 'post'
                , even: true
                , loading: true
                , where: {
                    keywords: '',
                    orgId: '@Model.OrgId',
                }
            });


            var tabIns2 = table.render({
                elem: '#PreOutList'
                , url: '/Settle/GetPreOut'
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度
                , title: '押品档案'
                , cols: [[
                    { type: 'numbers', width: 60 }
                    , { field: 'OrgName', title: '机构名称' }
                    , { field: 'OrgCode', title: '机构代码' }
                    , { field: 'QuotaNo', title: '额度号' }
                    , { field: 'LoanAccount', title: '贷款账号' }
                    , { field: 'LoanBorrower', title: '借款人' }
                    , { field: 'CustomerNo', title: '客户号' }
                    , { field: 'UsedBy', title: '结清类型' }
                    , { field: 'SettleDateString', title: '结清日期' }
                    , { title: '操作', toolbar: '#optTpl2', width: 120 }
                ]]
                , page: true
                , limit: 15
                , limits: [15, 30, 50, 100]
                , method: 'post'
                , even: true
                , loading: true
                , where: {
                    keywords: '',
                    orgId: '@Model.OrgId',
                }
            });


            //操作栏事件监听
            table.on('tool(SettleList)', function (obj) {
                var data = obj.data;
                var layEvent = obj.event;

                if (layEvent == 'submit') {
                    submitAction(data.Id);
                }
                else if (layEvent == 'rollback') {
                    rollBackAction(data.Id);
                }
            });

            table.on('tool(PreOutList)', function (obj) {
                var data = obj.data;
                var layEvent = obj.event;

                if (layEvent == 'out') {
                    outAction(data.Id);
                }
            });


            $('#btn-Search').click(function () {
                table.reload('SettleList', {
                    where: {
                        keywords: $('#KeyWords').val(),
                        orgId: $('#OrgId').val()
                    }
                });
                return false;
            });


            var submitAction = function (tId) {
                layer.confirm('即将通过待审核清单！是否确定？', {
                    btn: ['确定', '取消'] //按钮
                }, function (inds) {
                    $.ajax({
                        url: '/Settle/PassReview',
                        type: 'post',
                        contentType: 'application/json',
                        dataType: "json",
                        data: JSON.stringify({ id: tId }),
                        success: function (result) {
                            layer.close(inds);
                            //console.log(result);
                            if (result.msg == '') {
                                top.layer.msg('编辑成功!', { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                    tabIns.reload();
                                });
                            }
                            else {
                                top.layer.msg('编辑失败! ' + result.msg, { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                });
                            }
                        },
                        error: function (result) {
                            layer.close(inds);
                            //console.log(result);
                            top.layer.msg('服务接口请求失败!', { time: 1000, shade: '0.3', shadeClose: true }, function () {
                            });
                        }
                    });
                }, function (inds) {
                    layer.close(inds);
                    return;
                });
            };


            var rollBackAction = function (tId) {
                layer.confirm('即将撤回审批！是否确定？', {
                    btn: ['确定', '取消'] //按钮
                }, function (inds) {
                    $.ajax({
                        url: '/Settle/RollBack',
                        type: 'post',
                        contentType: 'application/json',
                        dataType: "json",
                        data: JSON.stringify({ id: tId }),
                        success: function (result) {
                            layer.close(inds);
                            //console.log(result);
                            if (result.msg == '') {
                                top.layer.msg('编辑成功!', { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                    tabIns.reload();
                                });
                            }
                            else {
                                top.layer.msg('编辑失败! ' + result.msg, { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                });
                            }
                        },
                        error: function (result) {
                            layer.close(inds);
                            //console.log(result);
                            top.layer.msg('服务接口请求失败!', { time: 1000, shade: '0.3', shadeClose: true }, function () {
                            });
                        }
                    });
                }, function (inds) {
                    layer.close(inds);
                    return;
                });
            };


            var outAction = function (tId) {
                layer.confirm('即将结清出库！是否确定？', {
                    btn: ['确定', '取消'] //按钮
                }, function (inds) {
                    $.ajax({
                        url: '/Settle/SettleOut',
                        type: 'post',
                        contentType: 'application/json',
                        dataType: "json",
                        data: JSON.stringify({ id: tId }),
                        success: function (result) {
                            layer.close(inds);
                            //console.log(result);
                            if (result.msg == '') {
                                top.layer.msg('编辑成功!', { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                    tabIns2.reload();
                                });
                            }
                            else {
                                top.layer.msg('编辑失败! ' + result.msg, { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                });
                            }
                        },
                        error: function (result) {
                            layer.close(inds);
                            //console.log(result);
                            top.layer.msg('服务接口请求失败!', { time: 1000, shade: '0.3', shadeClose: true }, function () {
                            });
                        }
                    });
                }, function (inds) {
                    layer.close(inds);
                    return;
                });
            };
        });
    </script>
</body>
</html>
