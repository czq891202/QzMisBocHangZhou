@model QzMisBocHangZhou.Model.WorkSpaceInfo
@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>工作台</title>
    <meta http-equiv="X-UA-Compatible" content="text/html" charset="utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0,user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="renderer" content="webkit">

    <script type="text/javascript" src="~/Scripts/layuiadmin/layui/layui.js"></script>
    <link rel="stylesheet" media="all" href="~/Scripts/layuiadmin/layui/css/layui.css" />
    <link rel="stylesheet" media="all" href="~/Scripts/layuiadmin/style/admin.css" />
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-card">
            <div class="layui-card-header">待办事项</div>
            <div class="layui-card-body">
                <div class="layadmin-backlog">
                    <ul class="layui-row layui-col-space12">
                        @{
                            if (Model.CanTransfer)
                            {
                                <li class="layui-col-xs6">
                                    <a lay-href="../Transfer/ListView" class="layadmin-backlog-body">
                                        <h3>待移交档案</h3>
                                        <p><cite>@Model.TransferNo</cite></p>
                                    </a>
                                </li>
                            }
                        }

                        @{
                            if (Model.CanBorrow)
                            {
                                <li class="layui-col-xs6">
                                    <a lay-href="../Borrow/ListView" class="layadmin-backlog-body">
                                        <h3>待归还档案</h3>
                                        <p><cite>@Model.BorrowReturnNo</cite></p>
                                    </a>
                                </li>
                            }
                        }

                        @*@{
                            if (Model.CanSettle)
                            {
                                <li class="layui-col-xs6">
                                    <a lay-href="../Settle/ListView" class="layadmin-backlog-body">
                                        <h3>待结清领取档案</h3>
                                        <p><cite>@Model.ApprovalSettleOutNo</cite></p>
                                    </a>
                                </li>
                            }
                        }*@

                        @{
                            if (Model.CanApprovalTransfer)
                            {
                                <li class="layui-col-xs6">
                                    <a lay-href="../Transfer/ApprovalListView" class="layadmin-backlog-body">
                                        <h3>待移交审批</h3>
                                        <p><cite>@Model.ApprovalTransferNo</cite></p>
                                    </a>
                                </li>
                            }
                        }

                        @{
                            if (Model.CanApprovalBorrow)
                            {
                                <li class="layui-col-xs6">
                                    <a lay-href="../Borrow/ApprovalListView" class="layadmin-backlog-body">
                                        <h3>待借阅审批</h3>
                                        <p><cite>@Model.ApprovalBorrowNo</cite></p>
                                    </a>
                                </li>
                            }
                        }

                        @{
                            if (Model.CanApprovalSettle)
                            {
                                <li class="layui-col-xs6">
                                    <a lay-href="../Settle/ApprovalListView" class="layadmin-backlog-body">
                                        <h3>待结清审批</h3>
                                        <p><cite>@Model.ApprovalSettleNo</cite></p>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script>
        layui.config({
            base: '../../Scripts/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'table', 'form', 'laydate'], function () {
            var $ = layui.$
                , form = layui.form
                , layer = layui.layer
                , table = layui.table;

        });
    </script>
</body>
</html>
