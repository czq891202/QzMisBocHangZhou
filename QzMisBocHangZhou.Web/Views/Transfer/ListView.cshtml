@model QzMisBocHangZhou.Model.UserInfo
@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>档案移交</title>
    <meta http-equiv="X-UA-Compatible" content="text/html" charset="utf-8" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0,user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="renderer" content="webkit">

    <script type="text/javascript" src="~/Scripts/layuiadmin/layui/layui.js"></script>
    <link rel="stylesheet" media="all" href="~/Scripts/layuiadmin/layui/css/layui.css" />
    <link rel="stylesheet" media="all" href="~/Scripts/layuiadmin/style/admin.css" />
</head>
<body>
    <div class="layui-tab">
        <ul class="layui-tab-title">
            <li class="layui-this">待移交</li>
            <li>待审核</li>
        </ul>
        <div class="layui-tab-content">
            <div class="layui-tab-item layui-show">
                <div class="layui-fluid">
                    <div class="layui-card">
                        <div class="layui-card-body" style="padding: 15px;">
                            <form class="layui-form" lay-filter="component-form-group" action="">
                                <div class="layui-form-item">
                                    <div class="layui-inline">
                                        <div class="layui-input-inline">
                                            <select name="OrgId" id="OrgId" lay-filter="UserOrgFilter" lay-search=""></select>
                                        </div>
                                        <div class="layui-input-inline">
                                            <input type="text" name="KeyWords" id="KeyWords" autocomplete="off" class="layui-input">
                                        </div>
                                        <div class="layui-input-inline">
                                            <button class="layui-btn" id="btn-Search"><i class="layui-icon layui-icon-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="layui-form-item">
                                <table class="layui-table layui-form" id="TransferList" lay-filter="TransferList" lay-size="sm"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="layui-tab-item">
                <div class="layui-tab-item layui-show">
                    <div class="layui-fluid">
                        <div class="layui-card">
                            <div class="layui-card-body" style="padding: 15px;">
                                <div class="layui-form-item">
                                    <div class="layui-inline">
                                        <div class="layui-input-inline">
                                            <div class="layui-btn-group">
                                                <button class="layui-btn layui-btn" id="btn-ExportExcel">导出Excel</button>
                                                <button class="layui-btn layui-btn" id="btn-refresh">刷新</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="layui-form-item">
                                    <table class="layui-table layui-form" id="PreReviewList" lay-filter="PreReviewList" lay-size="sm"></table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script type="text/html" id="optTpl">
        <a class="layui-btn layui-btn-xs" lay-event="submit">提交</a>
    </script>

    <script type="text/html" id="optTpl2">
        <a class="layui-btn layui-btn-xs" lay-event="rollBack">撤回</a>
    </script>

    <script>
        layui.config({
            base: '../../Scripts/layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
            }).use(['index', 'table', 'form', 'layer'], function () {
            var $ = layui.$
                , form = layui.form
                , layer = layui.layer
                , table = layui.table;

            form.render(null, 'component-form-group');

            //机构下拉框绑定
            var orgloadingIndex = layer.load(2);
                $.ajax({
                    url: '/OrgInfo/GetOrgInfoListByUser',
                    type: 'get',
                    contentType: 'application/json',
                    dataType: "json",
                    success: function (result) {
                        //往下拉菜单里添加元素
                        //layer.alert(JSON.stringify(result));
                        $.each(result, function (index, item) {
                            $('#OrgId').append(new Option(item.Name, item.Id));
                        });
                        form.render('select');
                        form.val('component-form-group', { 'OrgId': '@Model.OrgId' });
                        layer.close(orgloadingIndex);
                    },
                    error: function (result) {
                        //console.log(result);
                        top.layer.msg('服务接口请求失败!', { time: 1000, shade: '0.3', shadeClose: false }, function () {
                            parent.layer.close(index);
                        });
                    }
                });

                var tabIns = table.render({
                    elem: '#TransferList'
                    , url: '/Transfer/GetPreTransfer'
                    , cellMinWidth: 80 //全局定义常规单元格的最小宽度
                    , title: '押品档案'
                    , cols: [[
                        { type: 'numbers' }
                        , { field: 'OrgName', title: '机构名称' }
                        , { field: 'OrgCode', title: '机构代码', width: 100 }
                        , { field: 'QuotaNo', title: '额度号' }
                        , { field: 'LoanAccount', title: '贷款账号' }
                        , { field: 'Borrower', title: '借款人' }
                        , { field: 'CustomerNo', title: '客户号' }
                        , { field: 'LabelCode', title: '标签号' }
                        , { title: '操作', toolbar: '#optTpl', width: 160 }
                    ]]
                    , page: true
                    , limit: 15
                    , limits: [15, 30, 50, 100]
                    , method: 'post'
                    , even: true
                    , loading: true
                    , where: {
                        keywords: '',
                        orgId: '@Model.OrgId',
                    }
                });

                var tabIns2 = table.render({
                    elem: '#PreReviewList'
                    , url: '/Transfer/GetPreReview'
                    , cellMinWidth: 80 //全局定义常规单元格的最小宽度
                    , title: '押品档案'
                    , cols: [[
                        { type: 'numbers', width: 60}
                        , { field: 'OrgName', title: '机构名称' }
                        , { field: 'OrgCode', title: '机构代码' }
                        , { field: 'QuotaNo', title: '额度号' }
                        , { field: 'LoanAccount', title: '贷款账号' }
                        , { field: 'Borrower', title: '借款人'}
                        , { field: 'CustomerNo', title: '客户号' }
                        , { field: 'LabelCode', title: '标签号' }
                        , { title: '操作', toolbar: '#optTpl2', width: 80 }
                    ]]
                    , page: true
                    , limit: 15
                    , limits: [15, 30, 50, 100]
                    , method: 'post'
                    , even: true
                    , loading: true
                    , where: {
                        keywords: '',
                        orgId: '@Model.OrgId',
                    }
                });


            //操作栏事件监听
                table.on('tool(TransferList)', function (obj) {
                    var data = obj.data;
                    var layEvent = obj.event;

                    if (layEvent == 'submit') {
                        submitAction(data.Id);
                    }
                });

                table.on('tool(PreReviewList)', function (obj) {
                    var data = obj.data;
                    var layEvent = obj.event;

                    if (layEvent == 'rollBack') {
                        rollBackAction(data.Id);
                    }
                });


            //按钮组事件监听
                $('#btn-ExportExcel').click(function () {
                    window.open('../Transfer/ExportTransferExcel');
                    return false;
                });


                $('#btn-Search').click(function () {
                    table.reload('TransferList', {
                        where: {
                            keywords: $('#KeyWords').val(),
                            orgId: $('#OrgId').val()
                        }
                    });
                    return false;
                });

                $('#btn-refresh').click(function () {
                    table.reload('PreReviewList', {
                        where: {
                            keywords: '',
                            orgId: '@Model.OrgId',
                        }
                    });
                    return false;
                });


                var submitAction = function (tId) {
                    var parentNode = 
                    layer.open({
                        type: 2,
                        title: '档案编辑',
                        shadeClose: false,
                        shade: 0.8,
                        area: ['800px', '80%'],
                        id: 'edit',
                        content: '/Transfer/TransferEditView?id=' + tId,    //iframe的url
                        end: function (layero, index) {
                            tabIns.reload();
                            tabIns2.reload();
                        }
                    });
                };


                var rollBackAction = function (tId) {
                    layer.confirm('即将撤回审批！是否确定？', {
                        btn: ['确定', '取消'] //按钮
                    }, function (inds) {
                        $.ajax({
                            url: '/Transfer/RollBack',
                            type: 'post',
                            contentType: 'application/json',
                            dataType: "json",
                            data: JSON.stringify({ id: tId }),
                            success: function (result) {
                                layer.close(inds);
                                //console.log(result);
                                if (result.msg == '') {
                                    top.layer.msg('编辑成功!', { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                        tabIns.reload();
                                        tabIns2.reload();
                                    });
                                }
                                else {
                                    top.layer.msg('编辑失败! ' + result.msg, { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                    });
                                }
                            },
                            error: function (result) {
                                layer.close(inds);
                                //console.log(result);
                                top.layer.msg('服务接口请求失败!', { time: 1000, shade: '0.3', shadeClose: true }, function () {
                                });
                            }
                        });
                    }, function (inds) {
                        layer.close(inds);
                        return;
                    });
                };

        });
    </script>
</body>
</html>
